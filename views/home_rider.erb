<div class="jumbotron">

<h1> Lines </h1>

<% if @lines == [] %>
  <p> There are no trains anymore... </p>

<% else %>

  <table>
    <tr>
      <th>
        Name:
      </th>
    </tr>
    <% @lines.each do |line| %>
    <tr>
      <td>
        <%= "<a href='lines/#{line.id}'>#{line.name}</a>" %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>


<h1> Stations </h1>

<% if @stations == [] %>
  <p> No current stations </p>

<% else %>

  <table>
    <tr>
      <th>
        Name:
      </th>
    </tr>
    <% @stations.each do |station| %>
    <tr>
      <td>
        <%= "<a href='stations/#{station.id}'>#{station.name}</a>" %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>


</div>
