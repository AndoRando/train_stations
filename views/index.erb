<h1>Train Station Control</h1>


<!-- RIDERS -->


<h2>For Riders:</h2>

<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="lines_dropdown_riders" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Lines
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <% @lines.each() do |line| %>
      <li><a id="riders_<%= line.id() %>" href="/lines/<%= line.id() %>"><%= line.name() %></a></li>
    <% end %>  </ul>
</div>

<p>
  <a href="/lines" id="all_lines_rider">Show all Lines</a>
</p>

<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="stations_dropdown_riders" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Stations
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <% @stations.each() do |station| %>
    <li><a href="/stations/<%= station.id()%>"><%= station.name() %></a></li>
    <% end %>
  </ul>
</div>

<p>
  <a href="/stations" id="all_stations_rider">Show all Stations</a>
</p>


